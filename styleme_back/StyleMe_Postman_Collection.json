      "name": "5. Obtener Imagen",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "http://localhost:8000/api/images/{{image_id}}",
          "protocol": "http",
          "host": ["localhost"],
          "port": "8000",
          "path": ["api", "images", "{{image_id}}"]
        },
        "description": "Obtiene una imagen desde GridFS. Reemplaza {{image_id}} con el ID real"
      }
    },
